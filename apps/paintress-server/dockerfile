# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Copy workspace package files (from monorepo root)
COPY package.json ./
COPY yarn.lock ./

# Copy app-specific package.json
COPY apps/paintress-server/package.json ./apps/paintress-server/

# Install dependencies for entire workspace
RUN yarn install --frozen-lockfile

# Copy source code
COPY apps/paintress-server ./apps/paintress-server/

# Set working directory to the app
WORKDIR /app/apps/paintress-server

# Build the application
RUN yarn build

# Production stage
FROM node:20-alpine AS production

WORKDIR /app


# Copy workspace package files (from monorepo root)
COPY package.json ./
COPY yarn.lock ./

# Copy app-specific package.json
COPY apps/paintress-server/package.json ./apps/paintress-server/

# Install only production dependencies for entire workspace
RUN yarn install --frozen-lockfile --production && yarn cache clean

# Copy built application from builder stage
COPY --from=builder /app/apps/paintress-server/dist ./apps/paintress-server/dist

# Set working directory to the app
WORKDIR /app/apps/paintress-server

# Expose port
EXPOSE 3000

# Start the application
CMD ["yarn", "start"]
